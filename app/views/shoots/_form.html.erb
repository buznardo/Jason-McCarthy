<%= form_for @shoot, :html => { :multipart => true } do |f| %>
  <% if @shoot.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @shoot.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :title, :placeholder => "Shoot Title",
      :title => "Type shoot title", :autofocus => 'autofocus' %>
  </div>
  <div class="field">
    <%= f.text_area :description, placeholder: "Shoot Description", rows: "8", title: "Type shoot description" %>
  </div>
  <div class="field">
	<%= f.file_field :thumb %>
  </div>
  <div class="field">
  	<%= f.collection_select :tag_id, Tag.all, :id, :name %>
  </div>
  <%= f.submit "Create Shoot", :class => "fl btn btn-big btn-primary" %>
  <%= link_to "cancel", shoots_path %>
<% end %>
