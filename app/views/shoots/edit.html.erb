<% provide(:title, 'Update Shoot Details') %>

<div class="container">
	<div class="content">
		<%= form_for @shoot, :html => { :multipart => true } do |f| %>
		  <% if @shoot.errors.any? %>
		    <div id="error_explanation">
		      <ul>
		      <% @shoot.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>

		  <div class="field">
		    <%= f.text_field :title, :placeholder => "Shoot Title",
		      :title => "Type shoot title", :autofocus => 'autofocus' %>
		  </div>
		  <div class="field">
		    <%= f.text_area :description, :placeholder => "Shoot Description", :title => "Type shoot description" %>
		  </div>
		  <div class="field">
			<%= f.file_field :thumb %>
		  </div>
		  <div class="field">
		  	<%= f.collection_select :tag_id, Tag.all, :id, :name %>
		  </div>
		  <%= f.submit "Update Shoot", :class => "fl btn btn-big btn-primary" %>
		  <%= link_to "cancel", shoots_path %>
		<% end %>
	</div>
</div>