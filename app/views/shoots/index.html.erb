<% provide(:title, 'Portfolio') %>

<% content_for :filters do %>
	<ul class="filters">
		<%= nav_link "All", shoots_path %>
    <% @tags.each do |tag| -%>
      <%= nav_link tag.name, shoots_path(tag_name: tag.name) %>
    <% end -%>
	</ul>
<% end %>

<div class="container">
	<ul class="thumbs">
		<% @shoots.each do |shoot| %>
			<li>
				<%= link_to image_tag(shoot.thumb.url), shoot %>
				<% if current_user %>
          <%= link_to 'Edit', edit_shoot_path(shoot),
            :class => "btn btn-small btn-primary" %>
          <%= link_to 'X', shoot, confirm: 'Are you sure?', 
            method: :delete, :class => "btn btn-small btn-primary" %>
				<% end %>
			</li>
		<% end %>
	</ul>
	
	<% if current_user %>
		<div class="content">
      <%= link_to 'New Shoot', new_shoot_path, 
        :class => "btn btn-large btn-primary" %>
		</div>
	<% end %>
</div>
